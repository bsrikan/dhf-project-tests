{
  "name": "flow-01",
  "description": "This is the default flow containing all of the default steps",
  "batchSize": 100,
  "threadCount": 4,
  "options": {
    "sourceQuery": null
  },
  "steps": {
    "1": {
      "name": "ingest-step-json",
      "description": "ingests json docs in JSON format to data-hub-STAGING",
      "stepDefinitionName": "default-ingestion",
      "stepDefinitionType": "INGESTION",
      "options": {
        "sourceQuery": null,
        "collections": [
          "flow-01-ingestion-json"
        ],
        "permissions": "rest-reader,read,rest-writer,update",
        "outputFormat": "json",
        "targetDatabase": "data-hub-STAGING"
      },
      "customHook": {},
      "retryLimit": 0,
      "batchSize": 100,
      "threadCount": 4,
      "fileLocations": {
        "inputFilePath": "input/orders/simple-docs/json",
        "inputFileType": "json",
        "outputURIReplacement": ".*input/orders/simple-docs/json*.,'/flow-01/json/'"
      }
    },
    "2": {
      "name": "mapping-step-json",
      "description": "maps and harmonizes JSON docs to data-hub-FINAL",
      "stepDefinitionName": "default-mapping",
      "stepDefinitionType": "MAPPING",
      "options": {
        "sourceQuery": "cts.collectionQuery('flow-01-ingestion-json')",
        "sourceDatabase": "data-hub-STAGING",
        "mapping": {
          "name": "OrderMapping1",
          "version": 2
        },
        "collections": [
          "flow-01-mapping-json"
        ],
        "outputFormat": "json",
        "targetDatabase": "data-hub-FINAL"
      },
      "customHook": null,
      "retryLimit": 0,
      "batchSize": 2,
      "threadCount": 0
    },
    "3": {
      "name": "ingest-step-xml",
      "description": "ingests xml docs in XML format to data-hub-STAGING",
      "stepDefinitionName": "default-ingestion",
      "stepDefinitionType": "INGESTION",
      "options": {
        "sourceQuery": null,
        "collections": [
          "flow-01-ingestion-xml"
        ],
        "permissions": "rest-reader,read,rest-writer,update",
        "outputFormat": "xml",
        "targetDatabase": "data-hub-STAGING"
      },
      "customHook": {},
      "retryLimit": 0,
      "batchSize": 100,
      "threadCount": 4,
      "fileLocations": {
        "inputFilePath": "input/orders/simple-docs/xml",
        "inputFileType": "xml",
        "outputURIReplacement": ".*input/orders/simple-docs/xml*.,'/flow-01/xml/'"
      }
    },
    "4": {
      "name": "mapping-step-xml",
      "description": "maps and harmonizes XML docs to data-hub-FINAL",
      "stepDefinitionName": "default-mapping",
      "stepDefinitionType": "MAPPING",
      "options": {
        "sourceQuery": "cts.collectionQuery('flow-01-ingestion-xml')",
        "mapping": {
          "name": "OrderMappingXml",
          "version": 1
        },
        "sourceDatabase": "data-hub-STAGING",
        "collections": [
          "mapping-flow-mapping-xml"
        ],
        "outputFormat": "xml",
        "targetDatabase": "data-hub-FINAL"
      },
      "customHook": null,
      "retryLimit": 0,
      "batchSize": 0,
      "threadCount": 0
    }
  }
}